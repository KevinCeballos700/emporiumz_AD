<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#354586"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView android:id="@+id/tvStoreName" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="EmporiumZ" android:textSize="24sp" android:textColor="#FFF" android:fontFamily="sans-serif-medium"/>
        <Space android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <ImageButton android:id="@+id/btnCart" android:layout_width="40dp" android:layout_height="40dp" android:background="@android:color/transparent" android:src="@android:drawable/ic_menu_view" />
    </LinearLayout>

    <Button android:id="@+id/btnOpenWeb" android:layout_width="match_parent" android:layout_height="48dp" android:text="Abrir Web" android:layout_margin="8dp"/>

    <WebView android:id="@+id/webView" android:layout_width="match_parent" android:layout_height="200dp" android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_send"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"/>
</LinearLayout>